*:/msg [$user='...nouser...'] [$message='...nomessage...'] = >>>
    include('lib.library/config.msa')
    if (has_permission('rccmd.pm'), true, die(concat(color(RED), 'You do not have permission.')))
    assign(@user, $user)
    assign(@message, $message)
    if (equals(@user, '...nouser...'),
        die(run('/rules helppm')),
        true
    )
    if (not(ponline(@user)),
        die(color(GOLD), @user, ' ', color(RED), 'is not online!'),
        true
    )
    if (equals(@message, '...nomessage...'),
        die(color(RED), 'You must pass a <message> to the command.'),
        true
    )
    msg(color(PINK), 'Message to ', color(RED), @player, color(PINK), ': ', color(WHITE), @message)
    tmsg(color(PINK), 'Message from ', color(RED), player(), color(PINK), ': ', color(WHITE), @message)
<<<

*:/tell [$=''] = >>>
    call_alias(concat('/msg ', $))
<<<

*:/pm [$=''] = >>>
    call_alias(concat('/msg ', $))
<<<
